{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*",
    "types/jest.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}